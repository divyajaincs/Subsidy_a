<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.somya.acer.subsidy.Main1"
    android:background="#e6da6f">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/enter"
        android:background="#e9d6aa"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fp"
            android:background="@drawable/gas3"
            android:textSize="72px"
            android:layout_marginTop="41dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/login"
            android:layout_toEndOf="@+id/login"
            android:onClick="next3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:background="@drawable/subsidy"
            android:textSize="72px"
            android:layout_alignTop="@+id/fp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="next2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:textSize="72px"
            android:background="@drawable/status1"
            android:layout_below="@+id/fp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:onClick="next4"/>
    </RelativeLayout>
</RelativeLayout>
