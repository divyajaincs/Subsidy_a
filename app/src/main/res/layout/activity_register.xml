<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5d6d6"
    tools:context="com.somya.acer.subsidy.register">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gas_ID"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textSize="70px" />

    <EditText
        android:id="@+id/Gas_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:textSize="45px" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Gas_Id"
        android:text="Password"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="60px" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Gas_Id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Gas_Id"
        android:layout_below="@+id/textView8"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Password"
        android:text="Confirm Password"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textSize="55px" />

    <EditText
        android:id="@+id/Confirm_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Password"
        android:layout_below="@+id/textView9"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Confirm_Password"
        android:text="Bhamashah_ID"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="55px" />

    <EditText
        android:id="@+id/Bhamashah_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Confirm_Password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Confirm_Password"
        android:layout_below="@+id/textView10"
        android:textSize="45px" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Bhamashah_ID"
        android:text="Contact"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:textSize="55px" />

    <EditText
        android:id="@+id/Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:ems="10"
        android:inputType="phone"
        android:textSize="40px" />

    <Button
        android:id="@+id/REGISTER_NOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#aeacac"
        android:onClick="next"
        android:text="REGISTER NOW"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="40px" />

</RelativeLayout>
